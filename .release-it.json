{
  "git": {
    "requireBranch": "v1",
    "commitMessage": "chore: release v${version}",
    "publish": true,
    "requireCommits": true,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publishArgs": ["--access public", "--provenance", "--tag v1-lts"]
  },
  "hooks": {
    "before:init": ["git pull origin v1", "npm run lint", "npm run test"],
    "after:github:release": "sleep 3 && gh release edit ${version} --latest=false"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "ignoreRecommendedBump": true,
      "gitRawCommitsOpts": {
        "merges": null
      },
      "parserOpts": {
        "mergePattern": "^Merge pull request #(\\d+) from (.*)$",
        "mergeCorrespondence": ["id", "source"]
      }
    }
  }
}
